<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    tools:context="justinkeller.hilltop.homeworkReminder">

    <EditText
        android:id="@+id/period"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="147sp"
        android:inputType="text"
        android:text="@string/math"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:ignore="LabelFor"
        />

    <EditText
        android:id="@+id/hwcontent"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_alignStart="@+id/period"
        android:layout_below="@+id/period"
        android:layout_marginTop="37sp"
        android:inputType="text"
        android:text="@string/homework"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:ignore="LabelFor"
        />

    <Button
        android:id="@+id/hwsub"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hwcontent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28sp"
        android:background="@color/background"
        android:text="@string/enter_homework"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hwcontent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61sp"
        android:text="@string/subject"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/period"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12sp"
        android:text="@string/homework2"
        android:textSize="24sp"
        android:textStyle="bold"/>

</RelativeLayout>