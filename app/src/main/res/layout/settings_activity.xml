<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/configurl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible"
        android:layout_below="@+id/mytextview"
        android:layout_alignParentStart="true"
        tools:ignore="LabelFor"
        android:inputType="textUri" />

    <TextView
        android:id="@+id/mytextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/please_enter_configuration_url" />

    <Button
        android:id="@+id/subbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/configurl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/download" />

    <EditText
        android:id="@+id/timeinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        android:layout_below="@+id/hometimesman"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="74dp"
        android:layout_marginTop="16dp"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/hometimesman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:text="@string/what_time_do_you_get_home"
        android:layout_below="@+id/subbutton"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/submittime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_time"
        android:layout_below="@+id/timeinput"
        android:layout_alignStart="@+id/subbutton" />

</RelativeLayout>